<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/padding_horizontal_material"
    android:paddingStart="@dimen/padding_horizontal_material"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            style="@style/EventTimeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="4:00 pm" />

        <TextView
            android:id="@+id/location"
            style="@style/EventLocationStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="at yo girl crib" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/padding_horizontal_material"
        android:layout_marginStart="@dimen/padding_horizontal_material"
        android:layout_weight="0"
        android:background="@color/text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/EventTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_horizontal_material"
            android:layout_marginTop="0dp"
            android:text="random event happening" />

        <TextView
            android:id="@+id/description"
            style="@style/EventBodyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description of whatever is going on here" />

    </LinearLayout>


</LinearLayout>